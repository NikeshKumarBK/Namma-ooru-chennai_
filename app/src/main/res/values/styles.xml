<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PlacesTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPlaces</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPlaces</item>
        <item name="colorAccent">@color/colorAccentPlaces</item>
    </style>

    <style name="SpiTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimarySpi</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSpi</item>
        <item name="colorAccent">@color/colorAccentSpi</item>
